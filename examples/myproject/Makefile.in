# Example Makefile

# installation prefix of Lattice Builder
LATBUILDER_PREFIX = @PREFIX@

INCLUDES = -I$(LATBUILDER_PREFIX)/include @INCLUDES@
LIBS = -L$(LATBUILDER_PREFIX)/lib -llatbuilder -llatticetester @LIBPATH@ @LIBRARIES@

# release
CXXFLAGS = @CXXFLAGS@

# debugging
#CXXFLAGS = -Wall -O0 -g

LDFLAGS = -Wl,-R,"$(LATBUILDER_PREFIX)/lib"

%.o: %.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) -std=c++14 -c $< -o $@

myproject: myproject.o
	$(CXX) $(LDFLAGS) $< $(LIBS) -o $@

clean:
	- rm myproject.o
