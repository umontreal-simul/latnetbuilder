#!/usr/bin/env python
# coding: utf-8

from waflib.Build import POST_LAZY

def build(ctx):
    ctx.add_group('group_chmod')
    ctx.post_mode = POST_LAZY

    lc_inc_dir = ctx.root.find_dir(ctx.top_dir).find_dir('latticetester/include')
    inc_dir = ctx.root.find_dir(ctx.top_dir).find_dir('include')

    ctx(features='cxx cxxprogram',
            source=ctx.path.ant_glob('*.cc'),
            includes=[inc_dir, lc_inc_dir],
            lib=ctx.env.LIB_FFTW  + ctx.env.LIB_SYSTEM + ctx.env.LIB_FILESYSTEM + ctx.env.LIB_PROGRAM_OPTIONS + ctx.env.LIB_GMP + ctx.env.LIB_NTL,
            stlib=ctx.env.STLIB_FFTW  + ctx.env.STLIB_SYSTEM + ctx.env.STLIB_FILESYSTEM + ctx.env.STLIB_PROGRAM_OPTIONS + ctx.env.STLIB_GMP + ctx.env.STLIB_NTL,
            target='bin/latnetbuilder',
            use=['latnetbuilder', 'latticetester'],
            install_path='${BINDIR}')   

    # gui launch bash script
    if ctx.cmd == 'install':
        ctx.install_files("${PREFIX}/bin/", ["latnetbuilder-gui", "latnetbuilder-gui-docker"])
        ctx.set_group('group_chmod')
        ctx(rule   = "chmod +x latnetbuilder-gui", source = 'wscript', cwd = ctx.env.PREFIX + "/bin/")
        ctx(rule   = "chmod +x latnetbuilder-gui-docker", source = 'wscript', cwd = ctx.env.PREFIX + "/bin/")